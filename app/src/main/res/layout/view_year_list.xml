<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rec_gray_rounded_32"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_18"
        android:gravity="center"
        android:text="@string/year"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_16" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/light_gray" />

    <cn.carbswang.android.numberpickerview.library.NumberPickerView
        android:id="@+id/vNumberPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/dp_10"
        app:npv_DividerColor="@color/light_gray"
        app:npv_DividerHeight="@dimen/dp_1"
        app:npv_ItemPaddingHorizontal="@dimen/dp_10"
        app:npv_ItemPaddingVertical="@dimen/dp_4"
        app:npv_RespondChangeOnDetached="false"
        app:npv_ShownCount="5"
        app:npv_TextColorNormal="@color/light_gray"
        app:npv_TextColorSelected="@color/black"
        app:npv_TextSizeNormal="@dimen/sp_16"
        app:npv_TextSizeSelected="@dimen/sp_24"
        app:npv_WrapSelectorWheel="true" />

</LinearLayout>